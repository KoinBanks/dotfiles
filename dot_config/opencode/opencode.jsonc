{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", ".git/**"],
  },
  "mcp": {
    "tavily": {
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey={env:TAVILY_API_KEY}",
      "enabled": false,
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}",
      },
    },
  },
}
